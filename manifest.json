{

  "manifest_version": 2,
  "name": "RFCViewer",
  "version": "1.0",

  "description": "Formats the contents of an RFC to ease reading them.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://tools.ietf.org/html/*"],
      "js": ["src/rfcviewer.js"]
    }
  ]

}
